@model IEnumerable<WebLayer.Models.UserModel>
@using WebLayer.Models;

@{
    Layout = null;
}

<div class="col-sm-4 col-xs-2"></div>
<div class="col-sm-4  col-xs-8">
    <h2>@ViewBag.Message</h2>
    @foreach (UserModel user in Model)
    {
        <div class="col-sm-6 col-xs-6" style="margin-top: 2%;">
            <a href="@Url.Action( "Index", new { userName = user.UserName })">

                <img src="Files/mainImg.jpg" alt="Image" class="img-circle" style="width:20%" />
                <span class="user-name-link">@user.UserName</span>
            </a>

        </div>
    }
    <div class="col-sm-4 col-xs-2"></div>  </div>