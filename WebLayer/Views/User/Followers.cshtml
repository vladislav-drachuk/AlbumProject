@model IEnumerable<WebLayer.Models.UserModel>
@using WebLayer.Models;


<h2>@ViewBag.Message</h2>

@foreach (UserModel user in Model)
{
    <div class="col-sm-4 col-xs-4" style="margin-top: 2%;">
        <a href="@Url.Action( "Index", new { userName = user.UserName })">
     
        <img src="Files/mainImg.jpg" alt="Image" class="img-circle" style="width:20%" />
            <span class="user-name-link">@user.UserName</span>
            </a>
        @if (User.Identity.Name != user.UserName)
        {

            if (!user.IsFollowing)
            {
                <button class="followButton btn btn-primary  pull-right" data-username="@user.UserName" data-status="@user.IsFollowing">
                    <span id="followText">Follow</span>
                </button>
            }
            else
            {
                <button class="followButton btn btn-primary  pull-right" style="background-color:lawngreen" data-username="@user.UserName" data-status="@user.IsFollowing">
                    <span id="followText">Unfollow</span>
                </button>
            }
        }

    </div>
}
